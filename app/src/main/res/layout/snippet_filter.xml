<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_16"
            android:background="@drawable/bg_circular_grey_white"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/spacing_10"
            android:padding="@dimen/spacing_12"
            android:text="Search for anything..."
            android:textColor="@color/black_2e384d"
            android:textSize="@dimen/text_size_12"
            app:fontFamily="@font/roboto_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/appCompatTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circular_red_white"
            android:drawableStart="@drawable/ic_filter"
            android:drawablePadding="@dimen/spacing_10"
            android:padding="@dimen/spacing_12"
            android:text="Filter"
            android:gravity="center_vertical"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/text_size_12"
            app:fontFamily="@font/roboto_regular"
            app:layout_constraintBottom_toBottomOf="@id/et_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_search" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>