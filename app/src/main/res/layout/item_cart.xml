<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_EBEBEB"
    android:paddingStart="0dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_12"
        android:layout_marginBottom="@dimen/spacing_12"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white_FFFFFF"
        app:cardCornerRadius="@dimen/spacing_10"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cart"
            android:layout_width="@dimen/spacing_100"
            android:layout_height="@dimen/spacing_108"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_10"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_marginEnd="@dimen/spacing_8"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/cv_cart"
        app:layout_constraintTop_toTopOf="@id/cv_cart"
        tools:text="Garam Red Chowmein" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sub"
        android:layout_width="@dimen/spacing_22"
        android:layout_height="@dimen/spacing_22"
        android:layout_marginTop="@dimen/spacing_5"
        android:background="@drawable/bg_circle_border_grey"
        android:gravity="center"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="-" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_8"
        android:background="@drawable/bg_circular_border_grey"
        android:gravity="center"
        android:maxLength="3"
        android:paddingStart="@dimen/spacing_20"
        android:paddingEnd="@dimen/spacing_20"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_12"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sub"
        app:layout_constraintStart_toEndOf="@+id/tv_sub"
        app:layout_constraintTop_toTopOf="@+id/tv_sub"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_add"
        android:layout_width="@dimen/spacing_22"
        android:layout_height="@dimen/spacing_22"
        android:layout_marginStart="@dimen/spacing_8"
        android:background="@drawable/bg_circle_border_grey"
        android:gravity="center"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@id/tv_quantity"
        app:layout_constraintStart_toEndOf="@+id/tv_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_quantity"
        tools:text="+" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_10"
        android:gravity="end"
        android:textColor="@color/red_F93838"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@id/tv_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_add"
        app:layout_constraintTop_toTopOf="@id/tv_add"
        tools:text="Rs. 250" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_wishlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_16"
        android:background="@drawable/bg_circular_grey"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_4"
        android:paddingEnd="@dimen/spacing_16"
        android:paddingBottom="@dimen/spacing_4"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/text_size_12"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@id/cv_cart"
        app:layout_constraintEnd_toStartOf="@+id/tv_order_one"
        app:layout_constraintStart_toEndOf="@+id/cv_cart"
        app:layout_constraintStart_toStartOf="@+id/tv_sub"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Move to Wishlist" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_order_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        android:background="@drawable/bg_circular_red"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_4"
        android:paddingEnd="@dimen/spacing_16"
        android:paddingBottom="@dimen/spacing_4"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/text_size_12"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wishlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_wishlist"
        app:layout_constraintTop_toTopOf="@+id/tv_wishlist"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Order This Only" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_cdcbcb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/cv_cart" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@drawable/ic_delete"
        app:tint="@color/red_F93838" />
</androidx.constraintlayout.widget.ConstraintLayout>