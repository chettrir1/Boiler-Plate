<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/spacing_32"
        android:background="@color/background_F5F5F5"
        android:translationZ="2dp"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thumb"
            android:layout_width="220dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:src="@drawable/vc_login"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtLoading"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/spacing_8"
            android:indeterminateTint="@color/red_F93838" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumb"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/spacing_16"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/please_wait"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLoading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_16"
            android:elevation="0dp"
            android:background="@drawable/bg_item_border"
            android:fontFamily="@font/roboto_medium"
            android:minWidth="200dp"
            android:padding="@dimen/spacing_4"
            android:textAllCaps="false"
            android:textColor="@color/red_F93838"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            tools:text="Retry"
            tools:visibility="visible" />

    </RelativeLayout>
</layout>
