<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_grocery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_4"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_marginEnd="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_8"
        android:background="@color/white_FFFFFF"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white_FFFFFF"
        app:cardCornerRadius="@dimen/spacing_8"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_grocery"
                android:layout_width="@dimen/spacing_108"
                android:layout_height="@dimen/spacing_108"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_discount_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circular_red"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_6"
                android:paddingEnd="@dimen/spacing_6"
                android:singleLine="true"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="30% OFF" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_2"
                android:background="@color/background_F5F5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_grocery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:minLines="2"
                android:maxLines="2"
                android:layout_marginTop="@dimen/spacing_10"
                android:layout_marginEnd="@dimen/spacing_8"
                android:ellipsize="end"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/text_size_12"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintEnd_toEndOf="@id/iv_grocery"
                app:layout_constraintStart_toStartOf="@id/iv_grocery"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Hyatte Fine Dining" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_8"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/red_F93838"
                android:textSize="@dimen/text_size_10"
                app:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/spacing_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Rs. 2500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_old_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/spacing_8"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/grey_636161"
                android:textSize="@dimen/text_size_8"
                android:visibility="gone"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@id/tv_price"
                app:layout_constraintStart_toEndOf="@id/tv_price"
                app:layout_constraintTop_toTopOf="@id/tv_price"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Rs. 2500" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>