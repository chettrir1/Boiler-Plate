<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_4"
    android:layout_marginTop="@dimen/spacing_8"
    android:layout_marginEnd="@dimen/spacing_4"
    android:layout_marginBottom="@dimen/spacing_8"
    android:background="@color/background_EBEBEB"
    android:padding="@dimen/spacing_6">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_resturant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:cardCornerRadius="@dimen/spacing_10"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_resturant"
            android:layout_width="@dimen/spacing_100"
            android:layout_height="@dimen/spacing_108"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_12"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintEnd_toEndOf="@id/cv_resturant"
        app:layout_constraintStart_toStartOf="@id/cv_resturant"
        app:layout_constraintTop_toBottomOf="@id/cv_resturant"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Hyatte Fine Dining" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/grey_636161"
        android:textSize="@dimen/text_size_10"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Sanepa, Kathmandu" />

</androidx.constraintlayout.widget.ConstraintLayout>