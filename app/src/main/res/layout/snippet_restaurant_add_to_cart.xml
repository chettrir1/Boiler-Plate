<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint"
        android:background="@drawable/bg_add_to_cart"
        android:padding="@dimen/spacing_10"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_menu"
            android:layout_width="@dimen/spacing_108"
            android:layout_height="@dimen/spacing_108"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/white_FFFFFF"
            app:cardCornerRadius="@dimen/spacing_10"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/logo" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:ellipsize="end"
            android:paddingTop="@dimen/spacing_6"
            android:singleLine="true"
            android:textColor="@color/black_2e384d"
            android:textSize="@dimen/text_size_14"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_menu"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Buff Momo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/red_F93838"
            android:textSize="@dimen/text_size_14"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quantity"
            app:layout_constraintEnd_toStartOf="@+id/iv_minus"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="@id/iv_minus"
            tools:text="Rs. 200" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:padding="@dimen/spacing_4"
            app:layout_constraintEnd_toStartOf="@id/tv_quantity"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:srcCompat="@drawable/ic_add_to_cart_minus" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_8"
            android:background="@drawable/bg_circular_border_grey"
            android:gravity="center"
            android:maxLength="4"
            android:minWidth="@dimen/spacing_64"
            android:paddingStart="@dimen/spacing_20"
            android:paddingEnd="@dimen/spacing_20"
            android:text="@string/_1"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_12"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="@+id/iv_minus"
            app:layout_constraintEnd_toStartOf="@id/iv_add"
            app:layout_constraintTop_toTopOf="@+id/iv_minus" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:background="?android:attr/actionBarItemBackground"
            android:padding="@dimen/spacing_4"
            app:layout_constraintBottom_toBottomOf="@id/tv_quantity"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_quantity"
            app:srcCompat="@drawable/ic_add_to_cart_add" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circular_grey"
            android:gravity="center"
            android:paddingStart="@dimen/spacing_16"
            android:paddingTop="@dimen/spacing_4"
            android:paddingEnd="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_4"
            android:text="@string/add_to_cart"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/text_size_14"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="@+id/cv_menu"
            app:layout_constraintEnd_toStartOf="@+id/btn_order_now"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_order_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:background="@drawable/bg_circular_red"
            android:gravity="center"
            android:paddingStart="@dimen/spacing_16"
            android:paddingTop="@dimen/spacing_4"
            android:paddingEnd="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_4"
            android:text="@string/order_now"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/text_size_14"
            app:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add_to_cart"
            app:layout_constraintEnd_toEndOf="@+id/iv_add"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_add_to_cart"
            app:layout_constraintTop_toTopOf="@+id/btn_add_to_cart"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>