<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:text="Address 1"
        android:textColor="@color/black_2e384d"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_district"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:text="@string/district"
        android:textColor="@color/black_2e384d"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toStartOf="@+id/tv_district"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_district"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        tools:text="Raju Basnet"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_district"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title_district"
        app:layout_constraintTop_toTopOf="@+id/tv_title_district" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_street"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/street"
        android:textColor="@color/black_2e384d"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toStartOf="@+id/tv_street"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_title_district"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_district" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_street"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        tools:text="chettrri.raju@gmail.com"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_street"
        app:layout_constraintEnd_toEndOf="@+id/tv_district"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_title_street"
        app:layout_constraintTop_toTopOf="@+id/tv_title_street" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_local_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_16"
        android:text="@string/local_address"
        android:textColor="@color/black_2e384d"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toStartOf="@+id/tv_local_address"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_title_street"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_street" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_local_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        tools:text="9840449961"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_14"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_local_address"
        app:layout_constraintEnd_toEndOf="@+id/tv_street"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_title_local_address"
        app:layout_constraintTop_toTopOf="@+id/tv_title_local_address" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_address"
        app:srcCompat="@drawable/ic_delete"
        app:tint="@color/red_F93838" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_2"
        android:layout_marginTop="@dimen/spacing_8"
        android:background="@color/grey_D1D1D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_title_profile_details"
        app:layout_constraintStart_toStartOf="@id/tv_title_profile_details" />

</androidx.constraintlayout.widget.ConstraintLayout>